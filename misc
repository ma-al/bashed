# Misc aliases and shortcuts

alias ips="ip -o addr show scope global | awk '{gsub(/\/.*/, \" \",\$4); print \$4}'"

function details
{
   IPADDR=`ips`

   echo

   echo "============================"
   echo " USER: "$USER
   echo " HOST: "$HOSTNAME
   echo

   for addr in `ips`; do
      echo " ADDR: $addr"
   done

   echo "============================"
   echo
}
alias det="details"
